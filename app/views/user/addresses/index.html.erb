<div class="container">

  <h2 class="head-line text-center title_h2">配送先登録/一覧</h2>
  <div class="row">
   <table class="input-table">
    <tbody>
      <%= form_with model: @address, url: user_addresses_path , method: :post, local: true do |f| %>
        <tr>
          <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
          <td> <%= f.text_field :zip_code %></td>
        </tr>
        <tr>
          <td><%= f.label :"住所" ,class: "col-xs-3 control-label" %></td>
          <td> <%= f.text_field :address, class: "col-xs-7 form-control-static address" %></td>
        </tr>
        <tr>
          <td> <%= f.label :"宛名" ,class: "col-xs-3 control-label" %></td>
          <td><%= f.text_field :name, class: "col-xs-4 form-control-static name" %></td>
        </tr>
        <tr>
          <td><%= f.submit '登録する' ,class: "btn btn-success " %></td>
        </tr>
      <% end %>
   </tbody>
    </table>
  </div>

  <div class="row">
      <table class="table table-hover table-bordered">
          <thead>
              <tr class="info">
                  <th>郵便番号</th>
                  <th>住所</th>
                  <th>宛名</th>
                  <th colspan="2"></th>
              </tr>
          </thead>

          <tbody>
              <% @addresses.each do |address| %>
                <tr>
                  <td>
                    <%= address.id %>
                  </td>
                  <td>
                    <%= address.zip_code %>
                  </td>
                  <td class="text-left">
                    <%= address.address %>
                  </td>
                  <td class="text-left">
                    <%= address.name %>
                  </td>
                  <td align="center">
                      <%= link_to "編集する", edit_user_address_path(address.id), class: "btn-sm btn-primary" %>
                      <%= link_to "削除する", user_address_path(address) , method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
                  </td>
                </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>