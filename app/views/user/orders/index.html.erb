<div class="container">
  <h2 class="col-xs-8 col-xs-offset-2" style="margin-bottom: 30px;" >注文履歴一覧</h2>
  <div class="row">
    <table class="table table-bordered">
      <tr class="active">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td style="vertical-align: middle;"><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td style="vertical-align: middle;">
            <%= order.zip_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td align="center" style="vertical-align: middle;">
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.product.name %><br>
            <% end %>
          </td>
            <td align="right"><%= order.total_price.to_s(:delimited) %>円</td>
            <td class="col-xs-1" align="center" style="color: red;">
              <%= order.order_status %>
            </td>
            <td class="col-xs-1" align="center"><%= link_to "注文詳細", user_order_path(order), class:"btn btn-primary" %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <%= link_to "topへ", root_path ,class: "btn btn-sm btn-secondary"%>
</div>

