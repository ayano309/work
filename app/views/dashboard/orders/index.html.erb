
<div class="container">
  <h2 >注文履歴一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>      
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to dashboard_order_path(order) do%>
              <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S")%>
            <% end %>
          </td>
          <td><%= order.user.last_name + order.user.first_name%></td>
          <td><%= order.order_details.count %></td>
          <td><%= order.order_status%></td>
        </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>