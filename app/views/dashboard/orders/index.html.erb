
<div class="container">
  <h2 >注文履歴一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>注文日</th>
        <th>購入者</th>
        <th>注文商品</th>
        <th>支払い金額</th>
        <th>注文ステータス</th>
        <th>注文詳細</th>
      </tr>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.created_at.strftime("%Y/%m/%d")%>
          </td>
          <td>
             〒<%= order.user.zip_code%><br>
            <%= order.user.address%><br>
            <%= order.user.last_name + order.user.first_name%>
          </td>
          <td>
          　<% order.order_details.each do |order_detail|%>
           　<br><%= order_detail.product.name%>
            <% end %>
          </td>
          <td><%= order.total_price.to_s(:delimited) %>円</td>
          <td style="color:red;"><%= order.order_status%></td>
          <td><%= link_to "表示する",dashboard_order_path(order) , class:"btn btn-primary btn-sm"%></td>
        </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>

