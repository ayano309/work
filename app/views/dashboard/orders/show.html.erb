<div class="container">
  <h2 class="my-5 text-center">注文履歴詳細</h2>
  <div class="row justify-content-center">
    <div class="col-xs-12">
      <table class="table table-borderless">
         <thead>
            <tr>
              <th>購入者</th>
              <td><%= @order.user.last_name + @order.user.first_name%></td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>〒<%= @order.zip_code + @order.address%></td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= @order.pay_method %></td>
            </tr>
            <tr>
             <th>注文ステータス</th>
              <td>
                <%= form_with(model: @order, url: dashboard_order_path, method: :patch, local: true) do |f| %>
                  <%= f.select :order_status, Order.order_statuses.keys, {}, {class: "form-control", required: true} %>
                  <%= f.submit '更新', class:"btn btn-sm btn-success" %>
                <% end %>
              </td>
           </tr>
         </thead>
     </table>
    </div>
  </div>
  
</div>